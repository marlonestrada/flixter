<br>
<div class="booyah-box col-sm-10 col-sm-offset-1">
  <h1 class><%= current_lesson.title %></h1>
  <h4 class="pull-left lesson-subtitle"><%= current_lesson.subtitle %></h4>

  <% if current_lesson.next_lesson.present? %>
    <%= link_to lesson_path(current_lesson.next_lesson), :class => 'btn btn-default btn-lesson pull-right' do %>
      Next Lesson &nbsp;
      <span class="glyphicon glyphicon-forward"></span>
    <% end %>
  <% end %>

  <% if current_lesson.previous_lesson.present? %>
    <%= link_to lesson_path(current_lesson.previous_lesson), :class => 'btn btn-default btn-lesson pull-right' do %>
      <span class="glyphicon glyphicon-backward"></span>
      &nbsp; Previous Lesson
    <% end %>
  <% end %>

  <div class="clear"></div>

  <video id="MY_VIDEO_1" class="video-js vjs-default-skin vjs-big-play-centered" controls
  preload="auto" width="auto" height="auto" poster="/assets/black.jpg"
  data-setup="{}">
  <source src="<%= current_lesson.video.to_s %>" type='video/mp4'>
  <p class="vjs-no-js">To view this video please enable JavaScript, and consider upgrading to a web browser that <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a></p>
  </video>
</div>